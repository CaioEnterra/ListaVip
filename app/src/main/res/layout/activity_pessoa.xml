<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:focusable="auto"
    android:orientation="vertical"
    tools:context=".model.Pessoa">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkBoxPresenca"
                android:layout_width="53dp"
                android:layout_height="66dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="16dp"
                android:text=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nomePessoa" />

            <TextView
                android:id="@+id/idadePessoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="100dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nomePessoa" />

            <TextView
                android:id="@+id/instaPessoa"
                android:layout_width="94dp"
                android:layout_height="26dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nomePessoa" />

            <TextView
                android:id="@+id/nomePessoa"
                android:layout_width="210dp"
                android:layout_height="36dp"
                android:layout_marginBottom="8dp"
                android:text="EventoJaCadastrado"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/numeroPessoa"
                tools:layout_editor_absoluteX="50dp" />

            <TextView
                android:id="@+id/numeroPessoa"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/idadePessoa"
                app:layout_constraintHorizontal_bias="0.331"
                app:layout_constraintStart_toEndOf="@+id/instaPessoa" />

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>